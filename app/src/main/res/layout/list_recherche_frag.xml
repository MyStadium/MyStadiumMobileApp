<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:weightSum="1">


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="162dp"
        android:layout_weight="0.09">

        <TextView
            android:text="1 janvier 10:00"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="28dp"
            android:id="@+id/txtDateTime" />

        <TextView
            android:text="AS HOUTAIN"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/txtDateTime"
            android:layout_toStartOf="@+id/txtDateTime"
            android:layout_marginEnd="26dp"
            android:layout_marginTop="21dp"
            android:id="@+id/txtEquipeDomicile" />

        <TextView
            android:text="0-5"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/txtScore"
            android:layout_alignBaseline="@+id/txtEquipeDomicile"
            android:layout_alignBottom="@+id/txtEquipeDomicile"
            android:layout_centerHorizontal="true" />

        <TextView
            android:text="AUBEL FC"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@+id/txtScore"
            android:layout_toEndOf="@+id/txtDateTime"
            android:id="@+id/txtEquipeExtérieure" />

        <TextView
            android:text="Rue de Wonck 21 Houtain"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true"
            android:id="@+id/txtAdresse" />

        <Button
            android:text="Voir détails du match"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/btnVoirMatch"
            android:layout_above="@+id/txtAdresse"
            android:layout_centerHorizontal="true"
            android:layout_marginBottom="17dp" />

    </RelativeLayout>
</LinearLayout>