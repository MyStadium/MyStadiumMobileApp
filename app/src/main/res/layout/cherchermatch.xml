<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Rechercher"
        android:id="@+id/btnRecherche"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Près de moi"
        android:id="@+id/btnLocaliserMatchProche"
        android:layout_alignParentTop="true"
        android:layout_toEndOf="@+id/btnRecherche" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Déjà sur place?"
        android:id="@+id/textView6"
        android:layout_alignBaseline="@+id/btnLocaliserMatchProche"
        android:layout_alignBottom="@+id/btnLocaliserMatchProche"
        android:layout_alignParentStart="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Recherche"
        android:id="@+id/textView7"
        android:layout_below="@+id/btnLocaliserMatchProche"
        android:layout_alignParentStart="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Date de fin :"
        android:id="@+id/textView9"
        android:layout_centerVertical="true"
        android:layout_alignParentStart="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Rayon (km) :"
        android:id="@+id/textView10"
        android:layout_alignBottom="@+id/nbKilometre"
        android:layout_alignParentStart="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Date de début :"
        android:id="@+id/textView8"
        android:layout_below="@+id/textView7"
        android:layout_alignParentStart="true"
        android:layout_marginTop="71dp" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="number"
        android:ems="10"
        android:id="@+id/nbKilometre"
        android:layout_below="@+id/editText3"
        android:layout_alignEnd="@+id/btnLocaliserMatchProche"
        android:layout_marginTop="47dp" />

    <Button
        android:text="Choisir"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/btnChoisirDateDebut"
        android:layout_alignBaseline="@+id/textView8"
        android:layout_alignBottom="@+id/textView8"
        android:layout_centerHorizontal="true" />

    <Button
        android:text="Choisir"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/btnChoisirDateFin"
        android:layout_centerVertical="true"
        android:layout_alignStart="@+id/btnChoisirDateDebut" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/datePickerDebut"
        android:layout_alignStart="@+id/btnLocaliserMatchProche"
        android:layout_alignParentEnd="true"
        android:layout_alignBottom="@+id/btnChoisirDateDebut"
        android:layout_alignTop="@+id/textView8" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/datePickerDebut"
        android:id="@+id/datePickerFin"
        android:layout_alignParentEnd="true"
        android:layout_alignBottom="@+id/btnChoisirDateFin"
        android:layout_alignTop="@+id/textView9" />

</RelativeLayout>