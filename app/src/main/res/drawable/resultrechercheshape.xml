<?xml version="1.0" encoding="utf-8"?>
<shape xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- we define background color -->


    <!-- we define border color and thick -->
    <stroke
        android:width="3dp"
        android:color="#c0c0c0" />

    <!-- add some padding for text inside -->
    <padding
        android:bottom="5dp"
        android:left="5dp"
        android:right="5dp"
        android:top="5dp" />

    <gradient
        android:angle="135"
        android:endColor="@color/bleufonceapp"
        android:startColor="@color/bleuclairapp"
        android:type="linear" />
    <!-- we define corner radius, note that radius can be different for each corner -->
    <corners android:radius="5dp" />
</shape>